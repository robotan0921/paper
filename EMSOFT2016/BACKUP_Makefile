# Title: Makefile
# Date:  2016/02/12
# Name:  Takuro

# File name
FILE = thesis
# Bib file
REF = ref.bib
# platex
PLATEX = platex.exe
# dvipdfmx
DVIPDFMX = dvipdfmx.exe
# pbibtex
PBIBTEX = pbibtex.exe
#
# Target
#

.PHONY: bib
bib: 
	PLATEX $(FILE).tex
	PBIBTEX $(FILE).aux
	PLATEX $(FILE).tex
	PLATEX $(FILE).tex
	DVIPDFMX $(FILE).dvi

.PHONY: clean
clean:
	rm -f $(FILE).aux $(FILE).log $(FILE).toc $(FILE).dvi $(FILE).bbl $(FILE).blg 
.PHONY: realclean
realclean:
	rm -f $(FILE).aux $(FILE).log $(FILE).toc $(FILE).dvi $(FILE).bbl $(FILE).blg $(FILE).pdf 
